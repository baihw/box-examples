<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wee0.box.examples.multiModule.module1.dao.SysUserDao">
    <resultMap id="SysUser" type="com.wee0.box.examples.multiModule.module1.entity.SysUserEntity">
        <id column="id" property="id" jdbcType="CHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="nick_name" property="nickName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="mobile" property="mobile" jdbcType="VARCHAR"/>
        <result column="sex" property="sex" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="create_user" property="createUser" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="update_user" property="updateUser" jdbcType="VARCHAR"/>
        <result column="is_deleted" property="isDeleted" jdbcType="BOOLEAN"/>
    </resultMap>

    <sql id="col_List">
		id, user_name, password, nick_name, email, mobile, sex, create_time, create_user, update_time, update_user, is_deleted
	</sql>

    <select id="findAll" resultMap="SysUser">
        SELECT
        <include refid="col_List"/>
        FROM SYS_USER
    </select>

    <select id="findOne" parameterType="java.lang.String" resultMap="SysUser">
        SELECT
        <include refid="col_List"/>
        FROM SYS_USER
        WHERE id = #{id}
    </select>

    <update id="updatePassword" parameterType="com.wee0.box.examples.multiModule.module1.entity.SysUserEntity">
        UPDATE SYS_USER SET
        <if test="passWord != null">passWord = #{passWord}</if>
        WHERE id = #{id}
    </update>

    <select id="selectUserMapLimitOne" resultType="java.util.HashMap">
		select id, user_name from SYS_USER order by id desc limit 1
	</select>

    <select id="nativeQuery1" parameterType="string" resultType="java.util.LinkedHashMap">
		${value}
	</select>

    <select id="nativeQuery2" parameterType="java.util.Map" resultType="java.util.LinkedHashMap">
		${sql}
	</select>

</mapper>